<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/image_text_color"
    android:paddingTop="5dp" >

     <fragment
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:id="@id/present_location"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:background="@color/location_text_color"
        android:gravity="center"
        android:text="@string/present"
        android:textColor="@color/image_text_color"
        android:textSize="@dimen/present_location_text_size" />

    <ListView
        android:id="@id/places"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@color/bg_for_location_listview"
        android:divider="@color/bg_color_for_status_diaglog"
        android:dividerHeight="1dp" >
    </ListView>

</LinearLayout>